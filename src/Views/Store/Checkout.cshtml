<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card p-2">
                <h1 style="text-align: center;">Checkout</h1>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Full Name</label>
                            <input class="form-control" placeholder="Bob Smith"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Country</label>
                            <input class="form-control" placeholder="Slovenia"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">City</label>
                            <input class="form-control" placeholder="Ljubljana"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Address</label>
                            <input class="form-control" placeholder="st. Marc, no. 5"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Payment Methods</label>
                            <img src="../images/card_img.png" alt="" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Card Number</label>
                            <input class="form-control" placeholder="1234-5678-9012-3456"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">CVV</label>
                            <input class="form-control" placeholder="123"/>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Expiration Date</label>
                            <input class="form-control" placeholder="01/2023"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <button class="form-control">Confirm Payment</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>